#!/usr/bin/env ruby

require 'pry'
require 'asciiart'

# animation velocity in [fps]
ANIM_VELOCITY = 10.0

frames = Dir["*.gif"].sort_by { |it| it.gsub(".gif", "").to_i  }.
                      map { |it| AsciiArt.new("#{it}").to_ascii_art }

3.times do |_|
  frames.each do |frame| 
    system "clear"
    puts frame 
    sleep 1 / ANIM_VELOCITY
  end
end
